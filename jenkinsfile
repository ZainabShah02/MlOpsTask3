pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Requirements') {
            steps {
                cmd 'pip install -r requirements.txt'
            }
        }
        
        stage('Run Tests') {
            steps {
                cmd 'python test_file.py'
            }
        }
    }
}
